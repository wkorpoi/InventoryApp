<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My Inventory Spot</title>
  <link rel="shortcut icon" href="favicon.ico">
  <link rel="stylesheet" href="font-awesome.min.css">
  <link rel="stylesheet" href="styles.css">
</head>

<body>

  <h1>My Inventory Spot</h1>

  <h3> Input Inventory </h3>

    <form action="/inventory" method="POST">
    <input class= "items" input type="text" placeholder="item" name="items" required="true">
    <input class= "quantity" input type="number" placeholder="0" name="quantity" required="true">
    <button type="submit">Submit</button>
    </form>

    <ul class="inventoryList">
    <% for(var i=0; i<messages.length; i++) {%>
      <li class="inventory">
        <span class="item"><%= messages[i].name %></span>
        <span class="quantity"><%= messages[i].msg %></span>
        <button class="delete-button" value="<%= messages[i]._id%>"> Delete Item</button>
      </li>
    <% } %>
    </ul>

  <script src="main.js"></script>
  <script src="server.js"></script>

</body>
</html>
